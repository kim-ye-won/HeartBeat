<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
   >

    <TextView
        android:id="@+id/logHi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="140dp"
        android:text="Hi, Welcome"
        android:textColor="@color/black2"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/logtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="4dp"
        android:text="Sign in to your account."
        android:textColor="@color/gray"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logHi"
        tools:ignore="MissingConstraints" />




    <ImageView
        android:id="@+id/logid"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/rectangle_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logtext"
        app:layout_constraintVertical_bias="0.089"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logpass"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logid"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextid"
        android:layout_width="311dp"
        android:layout_height="56dp"
        android:background="@null"
        android:hint="email"
        android:paddingLeft="20dp"
        android:textColorHint="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/logid"
        app:layout_constraintStart_toStartOf="@+id/logid"
        app:layout_constraintTop_toTopOf="@+id/logid"
        app:layout_constraintVertical_bias="0.0"></EditText>

    <EditText
        android:id="@+id/editTextpass"
        android:layout_width="311dp"
        android:layout_height="56dp"
        android:background="@null"
        android:hint="password"
        android:paddingLeft="20dp"
        android:textColorHint="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/logpass"
        app:layout_constraintStart_toStartOf="@+id/logpass"
        app:layout_constraintTop_toTopOf="@+id/logpass"
        app:layout_constraintVertical_bias="0.0"></EditText>


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bluebutton"
        android:backgroundTint="@color/Blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logpass"></ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="@+id/imageButton"></TextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="16dp"
        android:text="Donâ€™t have account?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"></TextView>

    <Button

        android:id="@+id/sign_up_btn"
        android:layout_width="58dp"
        android:layout_height="19dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:textSize="6dp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"></Button>

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="1dp"
        android:text="Sign up"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>