<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView

        android:id="@+id/Check_Page"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="건강 정보를 입력해주세요."
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/checklist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.525" />

    <LinearLayout
        android:id="@+id/checklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintBottom_toTopOf="@+id/submission"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Check_Page"
        app:layout_constraintVertical_bias="0.4">

        <CheckBox
            android:id="@+id/fever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:buttonTint="#0084F1"
            android:paddingLeft="10dp"

            android:text="접종 후 열이 있었나요?"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/pain"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:buttonTint="#0084F1"
            android:paddingLeft="10dp"

            android:text="접종부위에 통증이 있었나요?"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/swelling"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:buttonTint="#0084F1"
            android:paddingLeft="10dp"

            android:text="접종부위에 부기나 발적이 있었나요?"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/nausea"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:buttonTint="#0084F1"
            android:paddingLeft="10dp"

            android:text="토하거나 메스꺼운 증상이 있었나요?"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/headache"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:buttonTint="#0084F1"
            android:paddingLeft="10dp"

            android:text="두통, 관절통, 근육통 등 통증이 있었나요?"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/fatigue"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:buttonTint="#0084F1"
            android:paddingLeft="10dp"

            android:text="피로감 있었나요?"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/allergy"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:buttonTint="#0084F1"
            android:paddingLeft="10dp"

            android:text="알레르기 반응이 있었나요? \n(예: 두드러기, 발진, 손이나 얼굴 부기 등)"
            android:textSize="15dp" />

    </LinearLayout>

    <Button
        android:id="@+id/submission"
        android:layout_width="300dp"

        android:layout_height="60dp"
        android:layout_gravity="center"

        android:backgroundTint="#0084F1"

        android:text="건강 정보 제출"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checklist"
        app:layout_constraintVertical_bias="0.525" />

</androidx.constraintlayout.widget.ConstraintLayout>